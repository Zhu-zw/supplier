/* pages/chat/chat.wxss */
.chat-list{
  width: 100%;
  height: 150rpx;
  /* background-color: wheat; */
  border-bottom: #f4f4f4 solid 2rpx;
}
.chat_img{
  width: 20%;
  height: 150rpx;
  float: left;
}
.img{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-top: 20rpx;
  margin-left: 20rpx;
}
.customer1{
  width: 80%;
  height: 50rpx;
  /* background-color: #007AFF; */
  float: left;
  margin-left: 20rpx;
  margin-top: 20rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  color: #000000;
}
.customer2{
  width: 80%;
  height: 50rpx;
  /* background-color: skyblue; */
  float: left;
   overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  margin-top: 20rpx;
  margin-left: 20rpx;
  color: #969896;
}
.chat-box{
  width: 60%;
  height: 150rpx;
  /* background-color: yellowgreen; */
  float: left;
}
.right{
  width: 20%;
  height: 150rpx;
  /* background-color: gold; */
  float: right;
}
.time{
  width: 100rpx;
  /* background-color: #4CD964; */
  margin-top: 20rpx;
  color: #999999;
  font-size: 18px;
  
}
.news{
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  background-color: red;
  border-radius: 50%;
  margin-top: 10rpx;
  margin-left: 20rpx;
  text-align: center;
  font-size: 12px;
  color: white;
}


.main_item {
  display: flex;
  flex-direction: row;
  background: #fff;
  overflow: hidden;
}
movable-area {
  width: 532rpx;
  height: 151rpx;
  background: #fff;
}
movable-view {
  width: 750rpx;
  height: 151rpx;
}
 
.main_item_content {
  box-sizing: border-box;
  height: 151rpx;
  border-radius: 10rpx;
  color: #8e8e8e;
  padding-left: 10px;
  background: #eee;
}
 
.delete_btn {
  width: 184rpx;
  height: 151rpx;
  line-height: 151rpx;
  background-color: #f35129;
  border-top-right-radius: 10px;
  border-bottom-right-radius: 10px;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  margin-left: 30rpx;
}