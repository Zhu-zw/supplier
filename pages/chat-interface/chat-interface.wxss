.donut {
  display: inline-block;
  border: 2px solid rgba(0, 0, 0, 0.1);
  border-left-color: #4cd964;
  border-radius: 50%;
  width: 30rpx;
  height: 30rpx;
  animation: donut-spin 1.2s linear infinite;
  margin-left: 48%;
  margin-top: 10rpx;
}
.hide{
  display: none;
 }
 .show{ 
  display: block;
 }
