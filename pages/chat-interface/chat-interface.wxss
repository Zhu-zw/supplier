/* pages/chat-interface/chat-interface.wxss */
page {
  background-color: #f4f4f4;
  height: 100%;
}
.content{
  height: 100%;
  width: 100%;
}
.image_tip{width:100%;height:30rpx;text-align:center;}
.chat-window{
  background-color: #ededed;
  height: 90%;
}
.small-talk_time{
  width: 100%;
  text-align: center;
  color: #969896;
}
.talk-left{
  margin: 10rpx 0;
  float: left;
  width: 100%;
}
.talk-right{
  margin:10rpx 0;
  float: right;
  width: 100%;
}

.talk-photo-left{
  width: 90rpx;
  height: 90rpx;
  margin: 20rpx;
  margin-right: 0;
  float: left;
}
.talk-photo-right{
  width: 90rpx;
  height: 90rpx;
  margin: 20rpx;
  margin-left: 0;
  float: right;
}
.talk-photo-left image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.talk-photo-right image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.talk-content-left{
  max-width: 60%;
  min-height: 70rpx;
  line-height: 70rpx;
  background-color: #ffffff;
  margin-top: 30rpx;
  float: left;
  border-radius: 15rpx;
  word-wrap: break-word; 
}
.talk-content-right{
  max-width: 60%;
  min-height: 70rpx;
  line-height: 70rpx;
  background-color: #4CD964;
  margin-top: 30rpx;
  float: right;
  border-radius: 15rpx;
  word-wrap: break-word; 
}
.ma_loading{
  width:70rpx;
  height:70rpx;
  float:right;
  margin-top:30rpx;
}
.xcx-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}
.triangle-left{
  height:0px;
  width:0px;
  border-width:18rpx;
  border-style:solid;
  border-color:transparent #FFFFFF transparent transparent;
  float: left;
  margin-top: 45rpx;
}
.triangle-right{
  height:0px;
  width:0px;
  border-width:18rpx;
  border-style:solid;
  border-color:transparent transparent transparent #4CD964;
  float: right;
  margin-top: 45rpx;
}


.foot{
  width: 100%;
  height: 9%;
  border-top: #d5d5d7 solid 2rpx;
}
.chat-input{
  width: 65%;
  height: 45%;
  border-radius: 10rpx;
  background-color: white;
  vertical-align:middle;	
  float: left;
  margin-top: 26rpx ;
  margin-left: 20rpx;
  padding: 6rpx 20rpx;
}
.chat-btn{
  width: 60rpx;
  height: 60rpx;
  float: left;
  margin-top: 30rpx;
  margin-left: 20rpx;
}
.chat-btn image{
  width: 100%;
  height: 100%;
}
.send-out{
  width: 100rpx;
  height: 60rpx;
  line-height: 60rpx;
  float: left;
  background-color: #0077AA;
  border-radius: 30rpx;
  text-align: center;
  color: white;
  font-size: 0.7rem;
  margin-top: 30rpx;
  margin-left: 10rpx;
}
.inquiry{
  width:92%;
  /* height:300px; */
  border-radius:8px;
  background-color:#fff;
  margin:auto;
  margin-top:15px;
}
.img_con{
  width:100%;
  background-color: #0077AA;
}
.img_con .in_left{
  width:25%;
  height:100%;
  float:left;
  /* display: flex;
  justify-content: center; */

}
.in_right{
  width:96%;
  float:left;
  /* background-color:red; */
  padding-left:10px;
  margin-top:5px;
}
.in_left image{
  width:70px;
  height:70px;
  margin-top:10px;
  margin-left:10px;
}
.in_content{margin-bottom:5px;}
.in_content text{
  font-size:14px;
  color:#555;
}


